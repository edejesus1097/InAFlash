<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_or_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jon.inaflash.CreateOrEdit"
    tools:showIn="@layout/activity_create_or_edit"
    tools:background="@android:color/holo_red_light"
    android:background="@android:color/holo_red_light">
    android:exported="true"
    android:exported="true"

    <TextView
        android:text="Would you like to create or edit?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/texttest"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <Button
        android:text="Edit an existing deck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit"
        android:onClick="editButtonClick"
        android:layout_marginBottom="83dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Create A New Deck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create"
        android:onClick="createButtonClick"
        android:layout_above="@+id/edit"
        android:layout_marginBottom="45dp"
        android:layout_alignLeft="@+id/edit"
        android:layout_alignStart="@+id/edit"
        android:layout_alignRight="@+id/edit"
        android:layout_alignEnd="@+id/edit" />

    <Button
        android:text="Study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/study"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/texttest"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
